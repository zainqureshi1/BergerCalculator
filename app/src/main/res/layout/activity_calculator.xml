<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@mipmap/logo_bg"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp">




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/head"
        android:background="@mipmap/heading_bg"
        android:layout_marginLeft="@dimen/heading_left_margin"
        android:layout_marginRight="@dimen/heading_left_margin"
        android:gravity="center"
        android:layout_weight="2.31">

        <com.e2esp.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Bold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@color/color_bg"
            android:id="@+id/textView"
            android:textColor="@color/colortext"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:gravity="center"
            style="@style/AudioFileInfoOverlayText"
            android:textSize="@dimen/heading_text_size"
            android:layout_marginLeft="7dp"
            android:text="Calculator" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.3"
        android:gravity="center"
        android:background="@color/color_bg"
        android:layout_marginTop="7dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_bg"
            android:gravity="center">

            <com.e2esp.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Light
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paint "
                android:id="@+id/textView3"
                android:background="@color/color_bg"
                android:layout_below="@+id/head"
                android:layout_above="@+id/paint_gridview"
                android:gravity="center|right"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/heading_text_size"
                android:layout_marginRight="5dp"
                android:layout_weight="2.1" />

            <com.e2esp.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Medium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/paint_name"
                android:layout_below="@+id/head"
                android:background="@drawable/button_shape"
                android:textColor="@color/colortext"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/heading_text_size"
                android:layout_toRightOf="@+id/textView3"
                android:allowUndo="false"
                android:autoText="false"
                android:gravity="center"
                android:layout_marginRight="@dimen/label_filed_margin"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_bg"
            android:gravity="center">

            <com.e2esp.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Light
                android:text="Area of "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_below="@+id/textView3"
                android:gravity="center|right"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/heading_text_size"
                android:layout_marginRight="5dp"
                android:layout_above="@+id/dec"
                android:background="@color/color_bg"
                android:layout_weight="2.1" />

            <com.e2esp.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Medium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/area_of"
                android:layout_below="@+id/paint_name"
                android:background="@drawable/button_shape"
                android:textColor="@color/colortext"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/heading_text_size"
                android:layout_toRightOf="@+id/textView4"
                android:allowUndo="false"
                android:autoText="false"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginRight="@dimen/label_filed_margin"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <com.e2esp.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Light
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/dec"
        android:layout_below="@+id/area_of"
        android:text="(* The wall dimensions are being multiplied by 3 to calculate the area of the room for interior walls.)"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_weight="2.65"
        android:textSize="@dimen/dec_text_size"
        android:visibility="gone"
        android:autoText="false" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="1.33">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.85"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/frgement">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dimensions"
                android:id="@+id/dimensions"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/main_button_text_size"
                android:checked="true"
                android:buttonTint="@color/colorAccent" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Area"
                android:id="@+id/total_area"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/main_button_text_size"
                android:checked="false"
                android:buttonTint="@color/colorAccent" />
        </RadioGroup>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_below="@+id/dec"
            android:layout_above="@+id/button_calculate"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/dec"
                    android:background="@color/color_bg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:id="@+id/lenght"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.e2esp.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Length "
                        android:id="@+id/textView6"
                        android:background="@color/color_bg"
                        android:layout_below="@+id/dec"
                        android:textSize="@dimen/main_button_text_size"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="2.1"
                        android:gravity="right"
                        android:layout_marginRight="5dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/length"
                        android:background="@drawable/button_shape"
                        android:textColor="@color/colortext"
                        android:layout_below="@+id/textView6"
                        android:textSize="@dimen/heading_text_size"
                        android:paddingLeft="5dp"
                        android:maxLength="9"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginRight="@dimen/label_filed_margin"
                        android:layout_weight="1"
                        android:inputType="numberDecimal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@color/color_bg"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:id="@+id/widt"
                    android:layout_below="@+id/lenght"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.e2esp.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Width "
                        android:background="@color/color_bg"
                        android:id="@+id/textView7"
                        android:layout_below="@+id/dec"
                        android:textSize="@dimen/main_button_text_size"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="2.1"
                        android:gravity="right"
                        android:layout_marginRight="5dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/width"
                        android:background="@drawable/button_shape"
                        android:textColor="@color/colortext"
                        android:layout_below="@+id/textView7"
                        android:textSize="@dimen/heading_text_size"
                        android:paddingLeft="5dp"
                        android:maxLength="9"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginRight="@dimen/label_filed_margin"
                        android:layout_weight="1"
                        android:inputType="numberDecimal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_bg"
                    android:id="@+id/windows"
                    android:layout_below="@+id/coats"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:visibility="gone">

                    <com.e2esp.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_bg"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Windows "
                        android:id="@+id/w_d_no"
                        android:layout_below="@+id/dec"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/main_button_text_size"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="2.1"
                        android:layout_marginRight="5dp"
                        android:gravity="right" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/label_filed_margin"
                        android:gravity="center">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinner_d_w"
                            android:textColor="@color/colortext"
                            android:background="@drawable/button_shape"
                            android:spinnerMode="dropdown"
                            android:popupBackground="@color/color_result"
                            android:paddingLeft="5dp"
                            android:layout_centerInParent="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView4"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/droppng"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/coats"
            android:layout_below="@+id/widt"
            android:layout_weight="1.5"
            android:gravity="right">

            <com.e2esp.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Recommended coats: 2-3"
                android:id="@+id/recomend_cots"
                android:background="@color/color_bg"
                android:layout_below="@+id/dec"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="@dimen/label_filed_margin" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <com.e2esp.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="No. of Coats "
                    android:id="@+id/textView9"
                    android:background="@color/color_bg"
                    android:layout_below="@+id/dec"
                    android:textSize="@dimen/main_button_text_size"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="2.1"
                    android:layout_marginRight="5dp"
                    android:gravity="right" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:layout_marginRight="@dimen/label_filed_margin"
                    android:layout_weight="1">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_coats"
                        android:textColor="@color/colortext"
                        android:background="@drawable/button_shape"
                        android:spinnerMode="dropdown"
                        android:popupBackground="@color/color_result"
                        android:layout_centerInParent="true"
                        android:paddingLeft="5dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView3"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/droppng"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/widt"
            android:layout_weight="1.65"
            android:gravity="center">

            <com.e2esp.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" "
                android:id="@+id/textView99"
                android:background="@color/color_bg"
                android:layout_below="@+id/dec"
                android:textSize="@dimen/main_button_text_size"
                android:textColor="@color/colorAccent"
                android:layout_weight="2.1"
                android:gravity="right"
                android:layout_marginRight="5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="@dimen/label_filed_margin"
                android:layout_weight="1">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/meter"
                    android:textColor="@color/colortext"
                    android:background="@drawable/button_shape"
                    android:spinnerMode="dropdown"
                    android:popupBackground="@color/color_result"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView9"

                    android:layout_marginRight="10dp"
                    android:src="@drawable/droppng"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <com.e2esp.bergerpaints.calculator.CoustomButtonByFont.Raleway_Bold
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Calculate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/calculate_button"
        android:textColor="@color/colortext"
        android:paddingLeft="@dimen/calculate_button_padding"
        android:paddingRight="@dimen/calculate_button_padding"
        android:textSize="@dimen/calculate_button_text_size"
        android:layout_above="@+id/next_b"
        android:id="@+id/button_calculate"
        android:layout_weight="2.5" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left|bottom"
        android:background="@color/color_bg"
        android:layout_weight="2.37"
        android:padding="5dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/next_button"
            android:layout_height="@dimen/next_button"
            android:background="@drawable/forward_button_shape"
            android:id="@+id/back"
            android:rotation="180"
            android:visibility="visible"
            android:gravity="left"
            android:padding="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewf2"
                android:src="@mipmap/next"
                android:layout_gravity="center"
                android:foregroundGravity="right"
                android:paddingLeft="3dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/color_bg"
            android:layout_height="match_parent"
            android:gravity="bottom|right">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/next_button"
                android:layout_height="@dimen/next_button"
                android:background="@drawable/forward_button_shape"
                android:id="@+id/next_b"
                android:gravity="center"
                android:visibility="gone"
                android:padding="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:src="@mipmap/reset"
                    android:layout_gravity="center"
                    android:paddingLeft="3dp"
                    android:layout_margin="15dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
