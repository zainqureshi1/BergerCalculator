<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@mipmap/logo_bg"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/head"
        android:layout_below="@+id/imageView"
        android:background="@mipmap/heading_bg"
        android:layout_marginLeft="@dimen/heading_left_margin"
        android:layout_marginRight="@dimen/heading_left_margin"
        android:gravity="center"
        android:layout_weight="2.56">

        <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Bold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"

            android:id="@+id/textView"
            android:textColor="@color/colortext"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:gravity="center"
            style="@style/AudioFileInfoOverlayText"
            android:textSize="@dimen/heading_text_size"
            android:layout_marginLeft="7dp"
            android:text="Result" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.54"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:background="@color/color_bg">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_bg"
            android:gravity="center">

            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Light
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paint:"
                android:id="@+id/textView3"
                android:layout_below="@+id/head"
                android:layout_above="@+id/paint_gridview"
                android:gravity="center|right"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/heading_text_size"
                android:layout_marginRight="5dp"
                android:background="@color/color_bg"
                android:layout_weight="2.1" />

            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Medium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/paint_name"
                android:layout_below="@+id/head"
                android:background="@drawable/button_shape"
                android:textColor="@color/colortext"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/heading_text_size"
                android:layout_toRightOf="@+id/textView3"
                android:allowUndo="false"
                android:autoText="false"
                android:gravity="center"
                android:layout_marginRight="@dimen/label_filed_margin"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_bg"
            android:gravity="center">

            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Light
                android:text="Area of:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_below="@+id/textView3"
                android:gravity="center|right"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/heading_text_size"
                android:layout_marginRight="5dp"
                android:layout_above="@+id/dec"
                android:background="@color/color_bg"
                android:layout_weight="2.1" />

            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Medium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/area_of"
                android:layout_below="@+id/paint_name"
                android:background="@drawable/button_shape"
                android:textColor="@color/colortext"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/heading_text_size"
                android:layout_toRightOf="@+id/textView4"
                android:allowUndo="false"
                android:autoText="false"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginRight="@dimen/label_filed_margin"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.66"
        android:layout_marginTop="5dp"
        android:background="@color/color_bg">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_bg"
            android:gravity="center">

            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Length"
                android:id="@+id/textView5"
                android:background="@color/color_bg"
                android:textColor="@color/color_result"
                android:textSize="@dimen/heading_text_size" />

            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/lenght"
                android:background="@color/color_bg"
                android:textSize="@dimen/heading_text_size" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_bg"
            android:gravity="center"
            android:id="@+id/widthe">

            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Width"
                android:id="@+id/textView11"
                android:background="@color/color_bg"
                android:textColor="@color/color_result"
                android:textSize="@dimen/heading_text_size" />

            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:background="@color/color_bg"
                android:id="@+id/width"
                android:textSize="@dimen/heading_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.66"
        android:layout_marginTop="5dp"
        android:background="@color/color_bg">

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/color_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. of Coats"
                android:id="@+id/textView13"
                android:background="@color/color_bg"
                android:textColor="@color/color_result"
                android:textSize="@dimen/heading_text_size" />

            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/Cots"
                android:background="@color/color_bg"
                android:textSize="@dimen/heading_text_size" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/extra"
            android:background="@color/color_bg"
            android:visibility="invisible">

            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. of Door"
                android:id="@+id/n_d_w"
                android:background="@color/color_bg"
                android:textColor="@color/color_result"
                android:textSize="@dimen/heading_text_size" />

            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/w_d"
                android:background="@color/color_bg"
                android:textSize="@dimen/heading_text_size" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_weight="2.05" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="18.36 Liter(s)"
                android:id="@+id/result"
                android:layout_above="@+id/textView10"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_result"
                android:textSize="@dimen/result_text_size"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:background="@color/color_bg"
                android:gravity="bottom|center" />

            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Light
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="The given result is an approximation of the paint estimation."
                android:id="@+id/textView10"
                android:layout_centerInParent="true"
                android:textSize="@dimen/result_dec_text_size"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:background="@color/color_bg" />
            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Rs: 2406.46"
                android:id="@+id/price"
                android:layout_above="@+id/textView10"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_result"
                android:textSize="@dimen/heading_text_size"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:background="@color/color_bg"
                android:gravity="bottom|center" />
            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/price_s_q"
                android:layout_above="@+id/textView10"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_result"
                android:textSize="@dimen/heading_text_size"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:background="@color/color_bg"
                android:gravity="bottom|center"
                android:padding="5dp" />
            <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/price_s_m"
                android:layout_above="@+id/textView10"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_result"
                android:textSize="@dimen/heading_text_size"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:background="@color/color_bg"
                android:gravity="bottom|center"
                android:padding="5dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left|bottom"
        android:background="@color/color_bg"
        android:layout_weight="2.5"
        android:padding="5dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/next_button"
            android:layout_height="@dimen/next_button"
            android:background="@drawable/forward_button_shape"
            android:id="@+id/back"
            android:rotation="180"
            android:gravity="center"
            android:visibility="visible"
            android:padding="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewf2"
                android:src="@mipmap/next"
                android:layout_gravity="center"
                android:paddingLeft="3dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/color_bg"
            android:layout_height="match_parent"
            android:gravity="bottom|right">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/next_button"
                android:layout_height="@dimen/next_button"
                android:background="@drawable/forward_button_shape"
                android:id="@+id/next_b"
                android:gravity="center"
                android:visibility="visible"
                android:padding="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:src="@mipmap/reset"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:paddingRight="6dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
