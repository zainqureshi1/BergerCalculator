<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@mipmap/logo_bg"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/head"
        android:background="@mipmap/heading_bg"
        android:layout_marginLeft="@dimen/heading_left_margin"
        android:layout_marginRight="@dimen/heading_left_margin"
        android:gravity="center"
        android:layout_weight="2.03">

        <com.e2esp.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Bold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@color/color_bg"
            android:id="@+id/textView"
            android:textColor="@color/colortext"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:gravity="center"
            style="@style/AudioFileInfoOverlayText"
            android:textSize="@dimen/heading_text_size"
            android:layout_marginLeft="7dp"
            android:text="Select Paint" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.16"
        android:background="@color/color_bg"
        android:gravity="center">

        <com.e2esp.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Light
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paint:"
            android:id="@+id/textView3"
            android:layout_below="@+id/head"
            android:layout_above="@+id/paint_gridview"
            android:gravity="center|right"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/heading_text_size"
            android:background="@color/color_bg"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="@dimen/label_filed_margin"
            android:layout_weight="2.1" />

        <com.e2esp.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Medium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/paint_name"
            android:layout_below="@+id/head"
             android:background="@drawable/button_shape"
            android:textColor="@color/colortext"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/heading_text_size"
            android:layout_toRightOf="@+id/textView3"
            android:allowUndo="false"
            android:autoText="false"
            android:gravity="center"
            android:layout_marginRight="@dimen/label_filed_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_weight="1" />
    </LinearLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/paint_gridview"
        android:verticalScrollbarPosition="left"
        android:layout_centerVertical="true"
        android:layout_below="@+id/paint_name"
        android:layout_above="@+id/next_b"
        android:numColumns="2"
        android:verticalSpacing="0dip"
        android:horizontalSpacing="0dip"

        android:background="@drawable/color_bg_gradient"
        android:layout_weight="0.93"
        android:layout_marginBottom="5dp"
        android:gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg"
        android:gravity="bottom"
        android:layout_weight="2.01"
        android:padding="5dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/next_button"
            android:layout_height="@dimen/next_button"
            android:background="@drawable/forward_button_shape"
            android:id="@+id/back"
            android:rotation="180"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2r"
                android:src="@mipmap/next"
                android:layout_gravity="center"
                android:paddingLeft="3dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_bg"
            android:gravity="bottom|right"
            android:layout_gravity="bottom">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/next_button"
                android:layout_height="@dimen/next_button"
                android:background="@drawable/forward_button_shape"
                android:id="@+id/next_b"
                android:gravity="center"
                android:padding="12dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:src="@mipmap/next"
                    android:layout_marginLeft="3dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
