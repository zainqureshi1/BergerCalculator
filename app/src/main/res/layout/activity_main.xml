<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@mipmap/logo_bg"
    android:orientation="vertical"
    android:gravity="center"
    android:visibility="visible"
    android:padding="10dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@mipmap/logo"
        android:background="@color/color_bg"
        android:layout_centerHorizontal="true"
        android:layout_weight="2.1"
        android:layout_marginRight="@dimen/next_button"
        android:layout_marginLeft="@dimen/next_button" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/head"
        android:layout_below="@+id/imageView"
        android:background="@mipmap/heading_bg"
        android:gravity="center"
        android:layout_weight="2.01"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/heading_left_margin"
        android:layout_marginLeft="@dimen/heading_left_margin">

        <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Bold
            android:text="Paint Calculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:textColor="@color/colortext"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:gravity="center"
            style="@style/AudioFileInfoOverlayText"
            android:textSize="@dimen/heading_text_size"
            android:background="@color/color_bg"
            android:layout_marginLeft="7dp" />
    </LinearLayout>

    <com.vensoc.bergerpaints.calculator.CoustomTextViewByFonts.Raleway_Light
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Option"
        android:id="@+id/textView2"
        android:layout_below="@+id/head"
        android:layout_centerHorizontal="true"
        android:background="@color/color_bg"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/heading_text_size"
        android:layout_weight="2.2"
        android:gravity="center" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:background="@color/color_bg"
        android:layout_above="@+id/next_b"
        android:layout_weight="1.3"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp">

        <com.vensoc.bergerpaints.calculator.CoustomButtonByFont.Raleway_Light
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Ceiling"
            android:id="@+id/button_celing"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView2"
            android:background="@drawable/button_shape"
            android:textColor="@color/colortext"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="1"
            android:stateListAnimator="@null"
            android:textSize="@dimen/main_button_text_size" />

        <com.vensoc.bergerpaints.calculator.CoustomButtonByFont.Raleway_Light
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Exterior Walls"
            android:id="@+id/button_exterior_walls"
            android:layout_below="@+id/button_celing"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/main_button_top_margin"
            android:background="@drawable/button_shape"
            android:textColor="@color/colortext"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:stateListAnimator="@null"
            android:textSize="@dimen/main_button_text_size" />

        <com.vensoc.bergerpaints.calculator.CoustomButtonByFont.Raleway_Light
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Interior Walls"
            android:id="@+id/button_interior_walls"
            android:layout_below="@+id/button_exterior_walls"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/main_button_top_margin"
            android:background="@drawable/button_shape"
            android:textColor="@color/colortext"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:stateListAnimator="@null"
            android:layout_weight="1"
            android:textSize="@dimen/main_button_text_size" />

        <com.vensoc.bergerpaints.calculator.CoustomButtonByFont.Raleway_Light
            android:text="Doors"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/button_doors"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/button_interior_walls"
            android:layout_marginTop="@dimen/main_button_top_margin"
            android:background="@drawable/button_shape"
            android:textColor="@color/colortext"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:stateListAnimator="@null"
            android:layout_weight="1"
            android:textSize="@dimen/main_button_text_size" />

        <com.vensoc.bergerpaints.calculator.CoustomButtonByFont.Raleway_Light
            android:text="Windows"
            android:id="@+id/button_windows"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/button_interior_walls"
            android:layout_marginTop="@dimen/main_button_top_margin"
            android:background="@drawable/button_shape"
            android:textColor="@color/colortext"
            android:paddingRight="20dp"
            android:stateListAnimator="@null"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:textSize="@dimen/main_button_text_size" />

        <com.vensoc.bergerpaints.calculator.CoustomButtonByFont.Raleway_Light
            android:text="Wood Finishes"
            android:id="@+id/wood_finishes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/button_windows"
            android:background="@drawable/button_shape"
            android:textColor="@color/colortext"
            android:paddingRight="20dp"
            android:stateListAnimator="@null"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:textSize="@dimen/main_button_text_size"
            android:layout_marginTop="@dimen/main_button_top_margin" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.13"
        android:background="@color/color_bg"
        android:gravity="bottom|right"
        android:padding="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/next_button"
            android:layout_height="@dimen/next_button"
            android:background="@drawable/forward_button_shape"
            android:id="@+id/next_b"
            android:gravity="center"
            android:padding="12dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@mipmap/next"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
